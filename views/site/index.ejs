    align-items: center;
}

.sala-numero {
    font-size: 1.8rem;
    font-weight: 700;
    color: white;
}

/* √çcone + capacidade */
.sala-capacidade {
    display: flex;
    align-items: center;
    gap: 6px;
    color: #4db4ff;
    font-size: 1.1rem;
}

/* DIVISOR */
.sala-divider {
    height: 1px;
    width: 100%;
    background: rgba(255, 255, 255, 0.12);
    margin: 16px 0;
}

/* STATS */
.sala-stats {
    display: flex;
