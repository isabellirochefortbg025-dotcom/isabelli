}

.sala-stat-value {
    font-size: 1.1rem;
    font-weight: 600;
    margin-top: 3px;
    color: #ffffff;
}



        /* Footer */
        footer {
            background: rgba(0, 0, 0, 0.6);
            backdrop-filter: blur(10px);
            border-top: 1px solid rgba(168, 85, 247, 0.2);
            margin-top: 80px;
            padding: 50px 0 30px;
        }

        .footer-content {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
